      <div class="search-box">
        <input type="text" class="search-input" id="searchInput" 
               placeholder="ğŸ” ìŠ¤í”„ë ˆë“œì‹œíŠ¸ ê²€ìƒ‰..." 
               onkeyup="handleSearch(event)">
        <div class="filter-buttons">
          <button class="filter-btn active" onclick="setFilter('all')">ì „ì²´</button>
          <button class="filter-btn" onclick="setFilter('folders')">í´ë”ë§Œ</button>
          <button class="filter-btn" onclick="setFilter('spreadsheets')">ìŠ¤í”„ë ˆë“œì‹œíŠ¸ë§Œ</button>
        </div>
      </div>
      
      <div class="file-list">
        <div class="loading" id="loading">
          <div class="spinner"></div>
          <div>ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘...</div>
        </div>
        
        <div class="file-grid" id="fileGrid">
          <!-- íŒŒì¼ ëª©ë¡ -->
        </div>
        
        <div class="empty-state" id="emptyState" style="display: none;">
          <div class="empty-state-icon">ğŸ“­</div>
          <div>í´ë”ê°€ ë¹„ì–´ìˆìŠµë‹ˆë‹¤</div>
        </div>
      </div>
    </div>
