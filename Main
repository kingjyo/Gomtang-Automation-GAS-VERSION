const CONFIG = {
  SOURCE_SPREADSHEET_ID: 'YOUR_SOURCE_SPREADSHEET_ID', // ì‹¸ì´ë²„ìŠ¤ì¹´ì´ ë°ì´í„° ì†ŒìŠ¤ ìŠ¤í”„ë ˆë“œì‹œíŠ¸ ID
  FOLDER_ID: 'YOUR_FOLDER_ID', // ì €ì¥í•  êµ¬ê¸€ ë“œë¼ì´ë¸Œ í´ë” ID
  MANUAL_TEMPLATE_SHEET_NAME: 'ê°„í¸ì‹ ìˆ˜ê¸°ì†¡ì¥ ì–‘ì‹',
