    <script>
        let isProcessing = false;
        let selectedFile = null;

        // ë“œë˜ê·¸ ì•¤ ë“œë¡­ ì´ˆê¸°í™”
        function initializeDragAndDrop() {
            const uploadSection = document.getElementById('uploadSection');
            
            // ì—…ë¡œë“œ ì„¹ì…˜ ì´ë²¤íŠ¸
            uploadSection.addEventListener('dragenter', function(e) {
                e.preventDefault();
                e.stopPropagation();
                this.classList.add('drag-over');
                console.log('ë“œë˜ê·¸ ì§„ì…:', e.dataTransfer.files.length);
            });
            
            uploadSection.addEventListener('dragover', function(e) {
                e.preventDefault();
                e.stopPropagation();
                e.dataTransfer.dropEffect = 'copy';
                this.classList.add('drag-over');
            });
            
            uploadSection.addEventListener('dragleave', function(e) {
                e.preventDefault();
                e.stopPropagation();
                // ì‹¤ì œë¡œ ì˜ì—­ì„ ë²—ì–´ë‚¬ëŠ”ì§€ í™•ì¸
                if (!e.currentTarget.contains(e.relatedTarget)) {
                    this.classList.remove('drag-over');
                }
            });
            
            uploadSection.addEventListener('drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                this.classList.remove('drag-over');
                
                console.log('íŒŒì¼ ë“œë¡­ë¨:', e.dataTransfer.files.length);
                
                if (isProcessing) {
                    showStatus('ì´ë¯¸ ì²˜ë¦¬ ì¤‘ì…ë‹ˆë‹¤. ì ì‹œ ê¸°ë‹¤ë ¤ì£¼ì„¸ìš”.', 'error');
                    return;
                }
                
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    handleFileSelection(files[0]);
                } else {
                    showStatus('íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.', 'error');
                }
            });
        }
        
        // íŒŒì¼ ì„ íƒ ì²˜ë¦¬
        function handleFileSelection(file) {
            console.log('íŒŒì¼ ì„ íƒë¨:', file.name, 'Size:', file.size, 'Type:', file.type);
            
            if (!file.name.match(/\.(xlsx|xls)$/i)) {
                showStatus('âŒ Excel íŒŒì¼ë§Œ ì—…ë¡œë“œ ê°€ëŠ¥í•©ë‹ˆë‹¤. (.xlsx, .xls)', 'error');
                return;
            }
            
            selectedFile = file;
            const fileNameDiv = document.getElementById('fileName');
            fileNameDiv.innerHTML = `ğŸ“„ <strong>ì„ íƒëœ íŒŒì¼:</strong><br>${file.name}<br><small>í¬ê¸°: ${(file.size/1024/1024).toFixed(2)} MB</small>`;
            fileNameDiv.style.display = 'block';
            
            showStatus('âœ… íŒŒì¼ì´ ì„ íƒë˜ì—ˆìŠµë‹ˆë‹¤! "ì—…ë¡œë“œ ë° ìë™ ì§„í–‰" ë²„íŠ¼ì„ í´ë¦­í•˜ì„¸ìš”.', 'success');
            document.getElementById('uploadBtn').focus();
        }

        function showStatus(message, type) {
            const statusDiv = document.getElementById('status');
            statusDiv.textContent = message;
            statusDiv.className = 'status ' + type;
            statusDiv.style.display = 'block';
        }

        function uploadFile() {
            if (isProcessing) return;
            
            // ì„ íƒëœ íŒŒì¼ì´ ìˆëŠ”ì§€ í™•ì¸ (ë“œë˜ê·¸ ë“œë¡­ ë˜ëŠ” íŒŒì¼ ì„ íƒ)
            const file = selectedFile || document.getElementById('fileInput').files[0];
            
            if (!file) {
                showStatus('íŒŒì¼ì„ ì„ íƒí•´ì£¼ì„¸ìš”.', 'error');
                return;
            }
            
            if (!file.name.match(/\.(xlsx|xls)$/i)) {
                showStatus('Excel íŒŒì¼ë§Œ ì—…ë¡œë“œ ê°€ëŠ¥í•©ë‹ˆë‹¤.', 'error');
                return;
            }
            
            isProcessing = true;
            document.getElementById('uploadBtn').disabled = true;
            document.getElementById('uploadBtn').textContent = 'â³ ì²˜ë¦¬ ì¤‘...';
            showStatus('íŒŒì¼ì„ ì—…ë¡œë“œí•˜ê³  ì²˜ë¦¬í•˜ëŠ” ì¤‘ì…ë‹ˆë‹¤...', 'processing');
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const base64Data = e.target.result.split(',')[1];
                
                // ì¿ íŒ¡ íŒŒì¼ ì²˜ë¦¬ ë° ìë™ìœ¼ë¡œ ë‚˜ë¨¸ì§€ ê³¼ì • ì‹¤í–‰
                google.script.run
                    .withSuccessHandler(onUploadSuccess)
                    .withFailureHandler(onUploadError)
                    .processCoupangFileAndExecuteRemaining(base64Data, file.name);
            };
            
            reader.readAsDataURL(file);
        }
        
        function onUploadSuccess(result) {
            isProcessing = false;
            
            if (result.success) {
                showStatus('âœ… ì„±ê³µ! ëª¨ë“  ê³¼ì •ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤. ì¶œê³  ì´ë©”ì¼ì´ ë°œì†¡ë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
                
                setTimeout(() => {
                    google.script.host.close();
                }, 3000);
            } else {
                showStatus('âŒ ì˜¤ë¥˜: ' + result.error, 'error');
                document.getElementById('uploadBtn').disabled = false;
                document.getElementById('uploadBtn').textContent = 'ğŸš€ ì—…ë¡œë“œ ë° ìë™ ì§„í–‰';
            }
        }
        
        function onUploadError(error) {
            isProcessing = false;
            showStatus('âŒ ì—…ë¡œë“œ ì˜¤ë¥˜: ' + error.toString(), 'error');
            document.getElementById('uploadBtn').disabled = false;
            document.getElementById('uploadBtn').textContent = 'ğŸš€ ì—…ë¡œë“œ ë° ìë™ ì§„í–‰';
        }
        
        function closeDialog() {
            if (isProcessing) {
                if (!confirm('í˜„ì¬ ì²˜ë¦¬ ì¤‘ì…ë‹ˆë‹¤. ì •ë§ ë‹«ìœ¼ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                    return;
                }
            }
            google.script.host.close();
        }
        
        // Enter í‚¤ë¡œ ì—…ë¡œë“œ
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !isProcessing) {
                uploadFile();
            }
        });
        
        // íŒŒì¼ ì„ íƒ ì‹œ ìë™ í¬ì»¤ìŠ¤
        document.getElementById('fileInput').addEventListener('change', function() {
            if (this.files[0]) {
                handleFileSelection(this.files[0]);
            }
        });
        
        // í˜ì´ì§€ ë¡œë“œ ì‹œ ë“œë˜ê·¸ ì•¤ ë“œë¡­ ì´ˆê¸°í™”
        document.addEventListener('DOMContentLoaded', function() {
            initializeDragAndDrop();
        });
        
        // í˜ì´ì§€ ì „ì²´ì—ì„œ ê¸°ë³¸ ë“œë˜ê·¸ ë“œë¡­ ë™ì‘ ë°©ì§€ (ì—…ë¡œë“œ ì„¹ì…˜ ì œì™¸)
        document.addEventListener('dragover', function(e) {
            // ì—…ë¡œë“œ ì„¹ì…˜ì´ ì•„ë‹Œ ê²½ìš°ì—ë§Œ ê¸°ë³¸ ë™ì‘ ë°©ì§€
            if (!e.target.closest('#uploadSection')) {
                e.preventDefault();
                e.dataTransfer.effectAllowed = 'none';
                e.dataTransfer.dropEffect = 'none';
            }
        });
        
        document.addEventListener('drop', function(e) {
            // ì—…ë¡œë“œ ì„¹ì…˜ì´ ì•„ë‹Œ ê²½ìš°ì—ë§Œ ê¸°ë³¸ ë™ì‘ ë°©ì§€
            if (!e.target.closest('#uploadSection')) {
                e.preventDefault();
                console.log('í˜ì´ì§€ ì™¸ë¶€ ë“œë¡­ ë°©ì§€ë¨');
            }
        });
        
        document.addEventListener('dragenter', function(e) {
            // ì—…ë¡œë“œ ì„¹ì…˜ì´ ì•„ë‹Œ ê²½ìš°ì—ë§Œ ê¸°ë³¸ ë™ì‘ ë°©ì§€
            if (!e.target.closest('#uploadSection')) {
                e.preventDefault();
            }
        });
    </script>
